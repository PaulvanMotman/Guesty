extends layout

block content
	body
		.container
			.row
				.col-md-2
					#wrapper
						#sidebar-wrapper
							ul.sidebar-nav
								li.sidebar-brand
									a(href='#')
									| #{event.name}
								li
									a(href='#') Guestlist
								li
									a(href='#') Sub-Users
								li
									a(href='#') Statistics
								li
									p#fbeventid #{fbeventid}
			#page-content-wrapper
				div.col-md-4.col-md-offset-2
					#checked-list
						h4 Original Guestlist
						ul
						each guest in guests
							li.checklist #{guest.name}
				div.col-md-6.col-md-offset-0
					#content-sw
						h4 Check boxes to list people on your guestlists
						each person in event.attending
							div
								input(class='checkbox', type='checkbox')
								label(class='speciallabel')= person.name
								div.guestinfo(style= "display: none")
									form
										input(type='text', placeholder='+1', class='guestcount', required)
										input(type='text', placeholder='Guest Class (e.g. VIP)', class='guestclass')
										input(type='text', placeholder='Phone number', class='phonenumber')
										input(type='text', placeholder='Email', class='email')
										button(class='updateguest', type='submit') Update Guest
