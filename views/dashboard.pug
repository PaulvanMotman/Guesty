extends layout

block content
	body
		#wrapper
			#sidebar-wrapper
				ul.sidebar-nav
					li.sidebar-brand
						a(href='#')
						| #{event.name}
					li
						a(href='#guestlist') Guestlist
					li
						a(href='#') Sub-Users
					li
						a(href='#') Statistics
					li
						a(href='/home') Home 
					li
						a(href='/signout') Log-out
			#page-content-wrapper
				.container
					.row
					h1 This Page is the dashboard to manage your guestlist
						.col-lg-12
							#content-sw
								h1 Select the boxes for the people you want on your guestlists
								each person in event.attending
									div
										input(class='checkbox', type='checkbox')
										label(class='speciallabel')= person.name
										div.guestinfo(style= "display: none")
											form
												input(type='text', placeholder='Guest count', class='guestcount', required)
												input(type='text', placeholder='Guest Class', class='guestclass')
												input(type='text', placeholder='Phone number', class='phonenumber')
												input(type='text', placeholder='Email', class='email')
												button(class='updateguest', type='submit') Update Guest
								p#fbeventid #{fbeventid}
								#message
									if message
										h1.text-center.error-message #{message}
